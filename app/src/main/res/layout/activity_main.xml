<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frminicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:backgroundTint="@color/green"
    android:onClick="transicao"
    tools:context=".MainActivity">

    <View
        android:id="@+id/idTela2"
        android:layout_width="338dp"
        android:layout_height="584dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="74dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="240dp"
        android:layout_height="461dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="277dp"
        android:layout_marginEnd="86dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/design_sem_nome" />

    <TextView
        android:id="@+id/txtlogo"
        android:layout_width="338dp"
        android:layout_height="76dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="493dp"
        android:fontFamily="@font/contrail_one"
        android:fontFeatureSettings="20px"
        android:hint="@string/app_name"
        android:text="@string/app_name"
        android:textColor="@color/green"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnentrar"
        android:layout_width="146dp"
        android:layout_height="72dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="302dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="357dp"
        android:backgroundTint="@color/green"
        android:onClick="transicao"
        android:text="@string/app_btn1"
        android:textColor="@color/white"
        android:textColorHighlight="@color/green"
        android:textColorHint="@color/green"
        android:textColorLink="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#4CAF50" />

</androidx.constraintlayout.widget.ConstraintLayout>