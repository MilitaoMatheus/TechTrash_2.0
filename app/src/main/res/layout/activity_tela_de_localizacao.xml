<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frmTeladescarte1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:backgroundTint="@color/green"
    tools:context=".TelaDeLocalizacao">

    <View
        android:id="@+id/view8"
        android:layout_width="364dp"
        android:layout_height="773dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="13dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintBounds" />

    <ImageView
        android:id="@+id/imgCircle8"
        android:layout_width="247dp"
        android:layout_height="259dp"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="672dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_circle_24"
        tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck,VisualLintBounds" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="157dp"
        android:layout_height="48dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="729dp"
        android:contentDescription="@string/content_description"
        android:fontFamily="@font/poppins_light"
        android:text="@string/Contato"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="651dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="17dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtIrDescarte"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/LocalDesc2"
            android:textAlignment="center"
            android:textColor="#43A047"
            android:textSize="24sp"
            tools:ignore="TextSizeCheck" />

        <ImageButton
            android:id="@+id/btnIrDescarte"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:onClick="Pesquisar"
            app:srcCompat="@drawable/irdescarte__1_"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,UsingOnClickInXml,ImageContrastCheck" />

        <TextView
            android:id="@+id/txtMandarEmail"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/MandarEmail"
            android:textAlignment="center"
            android:textColor="#43A047"
            android:textSize="24sp"
            tools:ignore="TextSizeCheck" />

        <ImageButton
            android:id="@+id/btMandarEmail"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:onClick="EnviarEmail"
            app:srcCompat="@drawable/mandaremail"
            tools:ignore="ContentDescription,UsingOnClickInXml,SpeakableTextPresentCheck,ImageContrastCheck" />

        <TextView
            android:id="@+id/txtLigar"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/ligar"
            android:textAlignment="center"
            android:textColor="#43A047"
            android:textSize="24sp"
            tools:ignore="TextSizeCheck" />

        <ImageButton
            android:id="@+id/imgFazerLigacao"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:onClick="Ligar"
            app:srcCompat="@drawable/fazerliga__o"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,UsingOnClickInXml,ImageContrastCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>